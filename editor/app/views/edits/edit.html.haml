-# edit.html.haml using partial

%h1 Edit Existing Entry

= @message

= form_tag edit_path(@edit), :method => :put do

  = label :edit, :synsetid, 'Synsetid'
  = text_field :edit, 'synsetid'
  %br
  = label :edit, :definition, 'Definition'
  = text_area :edit, 'definition', :size => "60x5"
  %br
  = label :edit, :members, 'Members'
  %br
  %table#members
    %thead
      %tr  
        %th
        %th= 'Word'
        %th= 'Sensekey'
    %tbody
      - @edit.members.each_pair do |member, key|
        %tr
          %td= check_box :check_box, 'delete_'+member
          %td= text_field :members, 'old_'+member, 'value' => member
          %td= text_field :members, ('old_'+member+'|'+'old_'+key), 'value' => key

  %br

  = submit_tag 'Update Entry Info', :name => 'update_members'
  = submit_tag 'Add member', :name => 'add_member'
  = submit_tag 'Delete checked', :name => 'delete_members'
  %br
  = link_to 'Return to list', edits_path



